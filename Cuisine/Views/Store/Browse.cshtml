@model Cuisine.Models.Category
 
@{
    ViewBag.Title = "Browse Products";
}
 
<div class="well">
    <h3><em>@Model.Name</em> Products</h3>
 
    <ul id="album-list">
        @foreach (var product in Model.Products)
        {
            <li>
                <a href="@Url.Action("Details", new { id = product.ProductId })">
                    <img alt="@product.Name" src="@product.ProductImageUrl" />
                    <span>@product.Name</span>
                </a>
            </li>
        }
    </ul>
</div>
